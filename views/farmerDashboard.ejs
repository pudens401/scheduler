<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmer Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .notification-success { background-color: #f0fdf4; border-left: 4px solid #4ade80; }
        .notification-warning { background-color: #fefce8; border-left: 4px solid #facc15; }
        .notification-error { background-color: #fef2f2; border-left: 4px solid #f87171; }
        @media (min-width: 768px) {
            .schedule-input { min-width: 120px; }
        }
    </style>
</head>
<body class="bg-gray-50 font-sans">
<div class="container mx-auto px-4 py-6 max-w-6xl">
    <header class="mb-8">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800">Farmer Dashboard</h1>
        <p class="text-gray-600 md:text-lg">Manage your automated feeding system</p>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Feeding Schedule -->
            <section class="bg-white rounded-lg shadow p-6">
                <h2 class="text-xl md:text-2xl font-semibold mb-4 text-gray-700">Feeding Schedule</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full">
                        <thead>
                            <tr class="border-b">
                                <th class="text-left py-2 px-1 text-gray-600 md:text-lg">Time</th>
                                <th class="text-left py-2 px-1 text-gray-600 md:text-lg">Portion (g)</th>
                                <th class="text-left py-2 px-1 text-gray-600 md:text-lg">Action</th>
                            </tr>
                        </thead>
                        <tbody id="scheduleTable">
                            <% schedule.forEach(item => { %>
                            <tr class="border-b">
                                <td class="py-3 px-1">
                                    <input type="time" value="<%= item.time %>" class="border rounded px-2 py-1 w-full schedule-input">
                                </td>
                                <td class="py-3 px-1">
                                    <input type="number" value="<%= item.portion %>" class="border rounded px-2 py-1 w-full" min="0" step="50">
                                </td>
                                <td class="py-3 px-1">
                                    <button class="delete-btn bg-red-100 hover:bg-red-200 text-red-600 py-1 px-3 rounded-md text-sm transition duration-200">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <div class="flex flex-col md:flex-row gap-2 mt-4">
                    <button id="updateScheduleBtn" class="w-full md:w-auto md:px-8 bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-md transition duration-200">
                        Update Schedule
                    </button>
                    <button id="addScheduleBtn" class="w-full md:w-auto md:px-8 bg-gray-200 hover:bg-gray-300 text-gray-800 py-2 px-4 rounded-md transition duration-200">
                        Add New Time
                    </button>
                </div>
            </section>

            <!-- Device Control Section -->
            <section class="bg-white rounded-lg shadow p-6">
                <h2 class="text-xl md:text-2xl font-semibold mb-4 text-gray-700">Device Control</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Food Level -->
                    <div class="bg-green-50 rounded-lg p-4 border border-green-100">
                        <div class="flex items-center mb-2">
                            <div class="bg-green-100 p-2 rounded-full mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <h3 class="font-medium text-gray-700">Food Level</h3>
                        </div>
                        <div class="h-4 bg-gray-200 rounded-full overflow-hidden">
                            <div class="h-full bg-green-500" style="width: <%= foodLevel %>%;"></div>
                        </div>
                        <p class="text-right text-sm text-gray-600 mt-1"><%= foodLevel %>% remaining</p>
                    </div>
                    
                    <!-- Manual Controls -->
                    <div class="bg-green-50 rounded-lg p-4 border border-green-100">
                        <h3 class="font-medium text-gray-700 mb-3">Manual Control</h3>
                        <div class="flex flex-col gap-2">
                            <button class="manual-control bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-md transition duration-200 text-sm">
                                Feed Now (100g)
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Right Column -->
        <div class="space-y-6">
            <!-- Notifications -->
            <section class="bg-white rounded-lg shadow p-6">
                <h2 class="text-xl md:text-2xl font-semibold mb-4 text-gray-700">Notifications</h2>
                <div class="space-y-3" id="notifications">
                    <% notifications.forEach(n => { %>
                        <div class="notification-<%= n.type %> p-3 rounded-md">
                            <p class="text-sm md:text-base"><%= n.message %></p>
                            <p class="text-xs md:text-sm text-gray-500 mt-1"><%= n.time %></p>
                        </div>
                    <% }) %>
                </div>
            </section>

            <!-- Device Info -->
            <section class="bg-white rounded-lg shadow p-6">
                <h2 class="text-xl md:text-2xl font-semibold mb-4 text-gray-700">My Device</h2>
                <div class="flex items-center mb-4">
                    <div class="bg-green-100 p-3 rounded-full mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-600 text-sm md:text-base">Device ID</p>
                        <p id="deviceId" class="font-medium text-gray-800 md:text-lg"><%= deviceId %></p>
                    </div>
                </div>
                <div class="space-y-2 text-sm text-gray-600">
                    <div class="flex justify-between">
                        <span>Last feeding:</span>
                        <span class="font-medium"><%= lastFeeding %></span>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
</body>
</html>
